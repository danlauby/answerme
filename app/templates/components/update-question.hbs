{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="type">Question:</label>
        {{input value=question id="question" placeholder=question.question}}
      </div>

      <div class="form-group">
        <label for="city">Additional Notes:</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
    <button {{action 'toggleQuestionUpdateForm'}} class="btn btn-warning">Update</button>
  </div>
  <button {{action 'toggleQuestionUpdateForm'}} class="btn btn-warning">Hide Form</button>
{{else}}
{{/if}}
