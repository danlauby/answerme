{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="type">Question:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="city">Additional Notes:</label>
        {{textarea value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}} class="btn btn-success">Save</button>
    </form>
  </div><br>
  <button {{action 'toggleQuestionUpdateForm'}} class="btn btn-warning">Hide Form</button>
{{else}}
<button {{action 'toggleQuestionUpdateForm'}} class="btn btn-warning">Edit Question</button>
{{/if}}
