{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">

        <label for="rating">Answer:</label>
        {{input value=content id="content"}}
      </div>


        <button {{action 'saveAnswer'}} class="btn btn-success">Save</button>
      </form>
      <button {{action 'toggleAnswerForm'}} class="btn btn-warning">Hide Form</button>
      </div>{{else}}
      <button {{action 'toggleAnswerForm'}} class="btn btn-danger">New Answer</button>
      {{/if}}
