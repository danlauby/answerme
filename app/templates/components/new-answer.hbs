{{#if addNewAnswer}}
<h2>My Answer:</h2>
  <div>
    <form {{action 'saveAnswer' on='submit'}}>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" required="required" class="form-control"}}
      </div>
      <div class="form-group">

        <label for="rating">Answer:</label>
        {{textarea value=content id="content" required="required" class="form-control"}}
      </div>


        <button class="btn btn-success">Save</button>
      </form><br>
      <button {{action 'toggleAnswerForm'}} class="btn btn-warning">Hide Form</button>
    </div>{{else}}
      <button {{action 'toggleAnswerForm'}} class="btn btn-success">answerMe!</button>
      {{/if}}
